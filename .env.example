# ===========================================
# Queen Less Kings - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME="Queen Less Kings"

# ===========================================
# Sanity CMS (Free Tier)
# Get these from: https://www.sanity.io/manage
# ===========================================
NEXT_PUBLIC_SANITY_PROJECT_ID=
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=

# ===========================================
# Spotify API (Free)
# Get these from: https://developer.spotify.com/dashboard
# ===========================================
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REFRESH_TOKEN=
SPOTIFY_ARTIST_ID=

# ===========================================
# Google APIs (Free)
# Get these from: https://console.cloud.google.com
# ===========================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Service account JSON key (base64 encoded or raw JSON)
GOOGLE_SERVICE_ACCOUNT_KEY=
# Google Drive folder ID for media storage
GOOGLE_DRIVE_FOLDER_ID=
# Google Calendar ID for events
GOOGLE_CALENDAR_ID=

# ===========================================
# Email - Resend (Free: 10,000 emails/month)
# Get API key from: https://resend.com
# ===========================================
RESEND_API_KEY=
EMAIL_TO=info@queenlesskings.com
EMAIL_FROM=Queen Less Kings <noreply@queenlesskings.com>

# ===========================================
# Social Media Links
# ===========================================
NEXT_PUBLIC_INSTAGRAM=https://instagram.com/queenlesskings
NEXT_PUBLIC_YOUTUBE=https://youtube.com/@queenlesskings
NEXT_PUBLIC_SPOTIFY=https://open.spotify.com/artist/queenlesskings
NEXT_PUBLIC_FACEBOOK=https://facebook.com/queenlesskings
NEXT_PUBLIC_TWITTER=https://twitter.com/queenlesskings
NEXT_PUBLIC_TIKTOK=https://tiktok.com/@queenlesskings
NEXT_PUBLIC_BANDCAMP=https://queenlesskings.bandcamp.com

# ===========================================
# Analytics (Optional - Vercel Analytics is free)
# ===========================================
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_GOOGLE_VERIFICATION=

# ===========================================
# Auth (Optional - for admin features)
# ===========================================
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000
